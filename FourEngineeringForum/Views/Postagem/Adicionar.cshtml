@model FourEngineeringForum.Models.Postagem

@{
    ViewBag.Title = "Adicionar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Publicar Mensagem</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="topico" class="control-label col-md-2">Tópico</label>
            <div class="col-md-10">
                @Html.DropDownList("idDoTopico", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDoTopico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="mensagem" class="control-label col-md-2">Mensagem</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Mensagem, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Mensagem, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Publicar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}