@using FourEngineeringForum.Util

@model FourEngineeringForum.Models.Usuario

@{
    ViewBag.Title = "Exclusão de Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>Você tem certeza que deseja excluir este usuário?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PerfilDoUsuario)
        </dt>

        <dd>
            @if (Model.PerfilDoUsuario == Convert.ToInt16(ListaDePerfisDoUsuario.Administrador))
            {
                <span>Administrador</span>
            }
            else
            {
                <span>Usuário</span>
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
            @Html.ActionLink("Voltar", "Index", null, null, new { @class="btn btn-info"})
        </div>
    }
</div>
